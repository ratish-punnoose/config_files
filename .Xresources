! xterm (and friends)

*XTerm*highlightSelection:  true
! Uncomment this to use color for the bold attribute
XTerm*VT100*colorBDMode:  on
XTerm*colorBDMode:  on
XTerm*VT100*colorBD:  SpringGreen1
XTerm*colorBD:  SpringGreen1
! Uncomment this to use color for underline attribute
XTerm.VT100*colorULMode:  on
XTerm*colorULMode:  on
XTerm.VT100*underLine:  off
XTerm*underLine:  off
XTerm*VT100*colorUL:  magenta
XTerm*colorUL:  magenta
! Uncomment this to display the scrollbar
UXTerm*scrollBar:  true


! This resource specifies whether or not to ignore the 'alternate screen'
! of applications such as vi.  When it is on, these applications will restore
! the contents of the screen when they are exited to what they were before
! they were started.  When it is off, the contents of vi will remain on the
! screen after the program is quit.
XTerm.VT100.titeInhibit:  true
XTerm*titeInhibit:  true

! Uncomment this to turn off color mode in your XTerms
!XTerm.VT100*colorMode:  off
XTerm.VT100*dynamicColors:  on
XTerm*dynamicColors:  on

! Number of lines of scrollback to save
XTerm*saveLines:	1500

XTerm*reverseWrap:	true
!XTerm*title: ganges

XTerm*background: black
XTerm*foreground: SkyBlue
!*XTerm*font: 9x15bold
XTerm*cursorColor: OrangeRed1
XTerm*renderFont: true
XTerm*faceName: Inconsolata
XTerm*faceSize:12
UXTerm*foreground: SkyBlue
UXTerm*renderFont: true
!UXTerm*faceName: Inconsolata
UXTerm*faceName: Ubuntu Mono
UXTerm*faceSize:12
UXTerm*cursorColor: OrangeRed1
!!XTerm*geometry: 80x24

*visualBell:		False
*scrollTtyOutput:	False
*scrollKey:		True
Scrollbar.JumpCursor:	True

XConsole.text.geometry:	480x130
!XConsole.text.x:  700
!XConsole.text.y: 1000
XConsole.verbose:	true
XConsole*iconic:	true
XConsole*font:		fixed

xscreensaver.timeout: 2
xscreensaver.cycle: 8
xscreensaver.lock: true
xscreensaver.lockTimeout: 3
xscreensaver.nice: 18
xscreensaver.splash: false
!xscreensaver.programs: decayscreen -root


