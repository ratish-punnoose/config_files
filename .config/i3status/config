general {
	colors = true
	interval = 5
}

order += "disk /"
order += "run_watch DHCP"
order += "ethernet eth0"
order += "load"
order += "time"

disk "/" {
	format = "%free"
}

load {
	format = "Load: %5min"
}

time {
	format = "%Y-%m-%d %H:%M:%S"
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

ethernet eth0 {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

